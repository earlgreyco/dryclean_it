<div class="pure-menu pure-menu-open">
  <%= link_to "Sarmander", root_path, class: "pure-menu-heading" %>

  <ul>
    <% if !current_user %>
      <li><%= link_to "sign in", signin_path, class: highlight(signin_path) %></li>
      <li><%= link_to "sign up", signup_path, class: highlight(signup_path) %></li>
    <% else %>
      <% if current_user.admin? %>
        <li><%= link_to "new recipe", new_recipe_path, class: highlight(new_recipe_path) %></li>
        <li class="menu-item-divided"><%= link_to "recipes", recipes_path, class: highlight(recipes_path) %></li>
        <li><%= link_to "users", users_path, class: highlight(users_path) %></li>
      <% end %>
      <li class="menu-item-divided"><%= link_to "profile", current_user, class: highlight(current_user) %></li>
      <li><%= link_to "settings", edit_user_path(current_user), class: highlight(edit_user_path(current_user)) %></li>
      <li class="menu-item-divided"><%= link_to "sign out", signout_path, method: "delete", class: highlight(signout_path) %></li>
    <% end %>
  </ul>
</div>