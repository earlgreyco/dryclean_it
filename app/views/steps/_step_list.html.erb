<% if @steps.any? %>
	<% @i = 0 %>

	<table class="pure-table pure-table-horizontal position-table full-width">
		<tr>
			<th>#</th>
			<th>Image</th>
			<th>Description</th>
			<th>Actions</th>
		</tr>
	<% @steps.each do |step| %>
		<% @i += 1 %>
		<tr>
			<td>
				<%= @i %>
			</td>
			<td>
				<% if step.filepicker_url? %>
					<%= filepicker_image_tag step.filepicker_url, w: 60, h: 60 %>
				<% end %>
			</td>

			<td>
				<%= step.description %>
			</td>

			<td>
				<%= link_to "edit", edit_step_path(step) %> / <%= link_to "delete", step, method: :delete, data: { confirm: "Sure you want to delete this step?" } %>
			</td>
		</tr>
	<% end %>
	</table>
<% end %>