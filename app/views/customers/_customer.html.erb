<div class="single-article">
	<div class="article-img" style="cursor: pointer;">
		<% if customer.img? %>
			<%= filepicker_image_tag customer.img, w: 110, h: 110, fit: 'crop' %>
		<% else %>
			<div class="no-photo">
				No Photo
			</div>
		<% end %>
	</div>
	<div class="article-name article-node" style="width:175px;">
		<label>First Name</label><br>
		<%= best_in_place customer, :first_name %>
	</div>
	<div class="article-price article-node" style="width:175px; border-bottom: 0px;">
		<label>Last Name</label><br>
		<%= best_in_place customer, :last_name %>
	</div>
	<div class="article-price article-node">
		<label>Phone</label><br>
		<%= best_in_place customer, :phone %>
	</div>
	<div class="customer-dropdown">
		<div class="article-price article-node" style="width:175px; border-bottom: 0px;">
			<label>Starch</label><br>
			<%= best_in_place customer, :starch, type: :select, collection: [["none", "none"], ["light", "light"], ["medium", "medium"], ["heavy", "heavy"]] %>
		</div>
		<div class="article-price article-node" style="width: 175px; border-bottom: 0px;">
			<label>Credits</label><br>
			<%= best_in_place customer, :credits %>
		</div>
		<div class="article-price article-node" style="border-top: 1px solid #e5e5e5;">
			<label>Email</label><br>
			<%= best_in_place customer, :email %>
		</div>
	</div>
	<div style="clear:both;"></div>
	<div class="delete-article">
		<span class="fontawesome-remove" data-toggle="modal" data-target="#customer-<%= customer.id %>"></span>

		<div class="modal fade" id="customer-<%= customer.id %>">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-body">
		      	<p>
		      		Sure you want to delete <%= customer.first_name %> <%= customer.last_name %>?
		      	</p>
		      </div>
		      <div class="modal-footer">
		      	<%= link_to "Yarp!", customer, method: :delete, remote: true, class: "orange-button" %>
		    	</div>
		    </div><!-- /.modal-content -->
		  </div><!-- /.modal-dialog -->
		</div><!-- /.modal -->
	</div>
</div>

<%= simple_form_for Order.new, remote: true, html: {id:"new-order-form", class: "order-form"} do |f| %>
	<%= f.input :customer_id, input_html: {value: customer.id, class: "hidden"}, label: false %>
	<%= f.submit "Place Order", class: "orange-button place-order-button", style: "width: 135px; margin-bottom: 15px; cursor: pointer;" %>
	<%= link_to "Order History", "#!", class: "grey-button order-history-button", remote: true %>
<% end %>

<div class="order-history" style="display: none;">
	<div class="order-history-header">
		<%= filepicker_image_tag customer.img, w:50, h:50, fit:'crop' if customer.img? %> <%= customer.first_name %> <%= customer.last_name %>
	</div>

	<table class="order-history-table">
		<tr>
			<th>Order #</th>
			<th>Articles</th>
			<th>Total Price</th>
			<th>Tags</th>
			<th>Rack #</th>
			<th>Drop Off Date</th>
			<th>Ready Date</th>
		</tr>

		<% customer.orders.each do |order| %>
		</tr>
			<td><%= order.id %></td>
			<td>
				<ul>
				<% order.order_items.each do |order_item| %>
					<li>
						<% if order_item.quantity > 0 %>
							<%= best_in_place order_item, :quantity %>
							<%= order_item.name.pluralize(order_item.quantity) %>
						<% end %>
					</li>
				<% end %>
				</ul>
			</td>
			<td>$<%= best_in_place order, :total_price %></td>
			<td><%= best_in_place order, :tag_number %></td>
			<td></td>
			<td>
				<%= order.created_at.strftime("%D") %><br>
				<%= order.created_at.strftime("%I:%M%p") %>
			</td>
			<td></td>
		<tr>
		<% end %>
	</table>
</div>