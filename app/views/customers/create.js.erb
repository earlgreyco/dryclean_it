<% if @saved %>
	$("#new-customer-form")[0].reset();
	$("#new-customer-form").hide();
	$(".customer-button").show();
	$(".img-added").hide();
	$("#new-customer-popup").after("<%= j render @customer %>");
	$(".article-node").animate({
		backgroundColor: "white"
	}, 300);

	$(".article-node input").animate({
		backgroundColor: "white"
	}, 300);
<% end %>