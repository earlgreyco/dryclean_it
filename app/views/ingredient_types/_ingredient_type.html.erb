<tr>
	<td>
		<% if ingredient_type.img? %>
			<%= filepicker_image_tag ingredient_type.img, w: 60, h: 60, fit: 'clip' %>
		<% end %>
	</td>

	<td>
		<%= ingredient_type.name %>
	</td>

	<td>
		<%= link_to "edit", edit_ingredient_type_path(ingredient_type) %> /
		<%= link_to "delete", ingredient_type, method: :delete,
																	data: { confirm: "Sure you want to delete #{ingredient_type.name}?" } %>
	</td>
</tr>