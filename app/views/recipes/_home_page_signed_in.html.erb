<% @recipes.each do |recipe| %>
	<%= link_to recipe_path(recipe) do %>
		<%= recipe.name %>
		<% if recipe.recipe_images.any? %>
			<%= filepicker_image_tag recipe.recipe_images[0].img, w: 100, h: 100 %>
		<% end %>
	<% end %>
	<% if !current_user.voted_on?(recipe) %>
		<%= link_to('vote for this recipe!', vote_up_recipe_path(recipe), :method => :post) %>
	<% end %>

	<%= pluralize recipe.votes.count, 'vote' %>
	<br><br><br>
<% end %>