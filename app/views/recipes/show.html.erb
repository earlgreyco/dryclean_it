<% provide(:title, @recipe.title) %>

<%= @recipe.title %>
<%= @recipe.description %>
<%= filepicker_image_tag @recipe.filepicker_url, w: 160, h: 160, fit: 'clip' %>


<%= render 'ingredients_section' %>

<%= render 'steps_section' %>

<% if current_user && current_user.admin? %>
	<%= render 'ingredients/new' %>
	<%= render 'steps/new' %>
	<%= link_to "edit", edit_recipe_path(@recipe) %>
	<%= link_to "delete", @recipe, method: :delete,
																data: { confirm: "You sure?" } %>
<% end %>