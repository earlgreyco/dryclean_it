<tr>
	<td>
		<% if recipe.filepicker_url? %>
			<%= filepicker_image_tag recipe.filepicker_url, w: 60, h: 60, fit: 'clip' %>
		<% end %>
	</td>

	<td>
		<%= link_to recipe.title, recipe_path(recipe) %>
	</td>

	<% if current_user %>
	<td>
		<%= link_to "edit", edit_recipe_path(recipe) %> /
		<%= link_to "delete", recipe, method: :delete,
																	data: { confirm: "Sure you want to delete #{recipe.title}?" } %>
	</td>
	<% end %>
</tr>