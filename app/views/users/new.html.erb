<% provide(:title, 'Sign up') %>

<div id="signup-wrapper">
	<div class="signup" id="signup-form">
		<%= simple_form_for User.new do |f| %>
			<div class="signup-section name-section">
				<label>Your Name</label>
				<%= f.input :name, label: false, class: "name" %>
			</div>
			<div class="signup-section">
				<label>Email Address</label>
				<%= f.input :email, label: false, class: "email" %>
			</div>
			<div class="signup-section">
				<label>Password</label>
				<%= f.input :password, label: false, class: "password" %>
			</div>
			<div class="signup-footer">
				<div class="login">
					Already signed up? 
				</div>
				<%= link_to "Sign in.", signin_path, class: "login-link" %>
				<%= f.submit "Get Started" %>
				<div style="clear:both;"></div>
			</div>
		<% end %>
	</div>
</div>