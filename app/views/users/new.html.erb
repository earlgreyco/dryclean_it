<% provide(:title, 'Sign up') %>

<div class="sign-up-form row-fluid">
	<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.text_field :name, placeholder: "name", class: "col-md-12 input-margin-small" %><br/>

		<%= f.text_field :email, placeholder: "email", class: "col-md-12 input-margin-small" %><br/>

		<%= f.password_field :password, placeholder: "password", class: "col-md-12 input-margin-small" %><br/>

		<%= f.password_field :password_confirmation, placeholder: "password confirmation", class: "col-md-12 input-margin-small" %><br/>

		<%= f.submit "Create my account", class: "col-md-12 button button-margin-small" %>
	<% end %>
</div>