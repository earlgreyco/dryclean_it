<% provide(:title, "Edit Your Profile") %>

<div class="settings-header">Update Your Profile</div>

<%= simple_form_for @user do |f| %>
	<%= filepicker_image_tag @user.img, w: 60, h: 60, fit: 'clip' if @user.img? %>
	<%= f.filepicker_field :img,button_text: "Add photo", onchange: "$('.submit-button').trigger('click');" %>

	<%= f.input :name %>

	<%= f.input :email %>

	<%= f.collection_radio_buttons :gender, [[true, 'Male'], [false, 'Female']], :first, :last %>

	<%= f.input :age %>

	<%= f.input :location %>

	<%= f.submit "Save Changes" %>
<% end %>