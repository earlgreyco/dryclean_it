<% content_for :dashboard_content do %>
	<%= @order.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%a") %>
	<%= @order.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%D") %>
	<%= @order.customer.first_name %> <%= @order.customer.last_name %>

	<% @order.order_items.each do |order_item| %>
		<%= order_item.quantity %> <%= order_item.name.pluralize(order_item.quantity) %>
	<% end %>

	<%= current_user.address %>
	<%= current_user.city %>
	<%= current_user.phone %>
	<%= number_to_currency(@order.total_price, precision: (@order.total_price.round == @order.total_price) ? 0 : 2) %>
<% end %>